
node('Build'){
    stage('scm'){
        git 'https://github.com/SandhyaKatigari/game-of-life.git'

    }

    stage('build'){
        sh label: '', script: 'mvn package'
        stash name: 'gol-war', includes: 'gameoflife-web/target/gameoflife.war'

    }

    stage('postbuild'){
        archiveArtifacts 'gameoflife-web/target/*.war'
        
    }

}
node('Dev'){
   stage('scm'){
      unstash 'gol-war'
      
      sh label: '', script: '''sudo yum install tomcat -y
      sudo cp /home/sandhya/testing/workspace/game-pipe/gameoflife-web/target/gameoflife.war /var/lib/tomcat/webapps/
      sudo systemctl restart tomcat'''
   }
}
